<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Frontend"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Welcome Activity - Splash/Welcome Screen (LAUNCHER) -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Frontend">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity - Home Screen with Caftan List -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Details Activity - Shows Caftan Details -->
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Rent Activity - Rental Form -->
        <activity
            android:name=".RentActivity"
            android:exported="false"
            android:parentActivityName=".DetailsActivity" />

        <!-- My Rentals Activity - View All Rentals -->
        <activity
            android:name=".MyRentalsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>

