<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Professional App Theme -->
    <style name="Theme.CaftanRental" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#764ba2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#667eea</item>
        <item name="colorSecondaryVariant">#3700B3</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:statusBarColor">#6200EE</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Style -->
    <style name="CardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Rounded Image Top -->
    <style name="RoundedImageTop">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Header Text Style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Price Text Style -->
    <style name="PriceTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6200EE</item>
    </style>

</resources>

