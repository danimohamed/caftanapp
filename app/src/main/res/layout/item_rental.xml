<?xml version="1.0" encoding="utf-8"?>
<!-- Professional rental list item layout -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Caftan Image with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivRentalCaftanImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Caftan Image"
                android:background="#E0E0E0" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Rental Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical">

            <!-- Caftan Name -->
            <TextView
                android:id="@+id/tvRentalCaftanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elegant Caftan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Customer Name -->
            <TextView
                android:id="@+id/tvRentalCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: John Doe"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Dates -->
            <TextView
                android:id="@+id/tvRentalDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 20 - Dec 25"
                android:textSize="13sp"
                android:textColor="#9E9E9E"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="4dp" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/tvRentalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000 DH"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#6200EE"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Delete Button with modern style -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteRental"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            app:icon="@drawable/ic_delete"
            app:iconTint="#F44336"
            app:iconGravity="textStart"
            android:contentDescription="Delete Rental" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

